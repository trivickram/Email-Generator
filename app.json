{
  "name": "ai-cold-email-generator",
  "description": "AI-powered cold email generator with React frontend and Node.js backend",
  "keywords": ["ai", "email", "generator", "react", "nodejs"],
  "website": "https://github.com/trivickram/Email-Generator",
  "repository": "https://github.com/trivickram/Email-Generator",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-python.git"
    }
  ],
  "env": {
    "GROQ_API_KEY": {
      "description": "Your Groq API key for AI processing",
      "required": true
    },
    "NODE_ENV": {
      "value": "production"
    }
  },
  "scripts": {
    "postdeploy": "npm run build"
  }
}
