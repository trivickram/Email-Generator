{
  "version": 2,
  "builds": [
    {
      "src": "web-app/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "web-app/backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/web-app/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/web-app/frontend/$1"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key"
  }
}
